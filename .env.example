# BUDDY AI Assistant - Web Deployment Configuration

# Environment variables for production deployment
PORT=8000
ENVIRONMENT=production
DEBUG=False

# Timezone Configuration (Important for accurate time display)
TIMEZONE=Asia/Kolkata
# Other common timezones:
# TIMEZONE=America/New_York (Eastern US)
# TIMEZONE=America/Los_Angeles (Pacific US)  
# TIMEZONE=Europe/London (UK)
# TIMEZONE=Europe/Paris (Central Europe)
# TIMEZONE=Asia/Tokyo (Japan)
# TIMEZONE=Australia/Sydney (Australia)

# API Keys (Set these in your hosting platform's environment variables)
# GOOGLE_API_KEY=your_google_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# Application settings
APP_NAME=BUDDY AI Assistant
VERSION=2.0.0
MAX_MEMORY_SIZE=1000

# Security settings
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Database settings (if using external database)
# DATABASE_URL=your_database_url_here

# Logging
LOG_LEVEL=INFO
